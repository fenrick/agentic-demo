{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": { "@/*": ["frontend/src/*"] },
    "outDir": "frontend/dist",
    "rootDir": "frontend/src"
  },
  "include": ["frontend/src"]
}
