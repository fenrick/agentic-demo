{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/lecture_schema.json",
  "title": "Lecture",
  "description": "A complete representation of an academic lecture, including metadata, learning objectives, activities, content outlines, assessments and citations.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the lecture."
    },
    "author": {
      "type": "string",
      "description": "Name of the lecture author or presenter."
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date the lecture was created or delivered (YYYY-MM-DD)."
    },
    "version": {
      "type": "string",
      "description": "Version identifier for the lecture (e.g., \"1.0\")."
    },
    "summary": {
      "type": "string",
      "description": "A brief summary or abstract of the lecture content."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Keywords or topics associated with this lecture."
    },
    "prerequisites": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of topics or skills learners should know before this lecture."
    },
    "duration_min": {
      "type": "integer",
      "minimum": 0,
      "description": "Total expected duration of the lecture in minutes."
    },
    "learning_objectives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      },
      "description": "Clear, measurable learning objectives for the lecture."
    },
    "activities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/Activity"
      },
      "description": "Interactive or passive learning activities during the lecture."
    },
    "slide_bullets": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/SlideBullet"
      },
      "description": "Bullet points for each slide, keyed by slide number."
    },
    "speaker_notes": {
      "type": "string",
      "description": "Detailed speaker notes or script to accompany the slides."
    },
    "assessment": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/AssessmentItem"
      },
      "description": "Assessments or quizzes to evaluate learner understanding."
    },
    "references": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Citation"
      },
      "description": "List of external sources cited in the lecture."
    }
  },
  "required": ["title", "learning_objectives", "activities", "duration_min"],
  "additionalProperties": false,
  "$defs": {
    "Activity": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Lecture",
            "Discussion",
            "Quiz",
            "Exercise",
            "Case Study",
            "Group Work"
          ],
          "description": "The category of activity."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the activity."
        },
        "duration_min": {
          "type": "integer",
          "minimum": 0,
          "description": "Time allocated for this activity in minutes."
        },
        "learning_objectives": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Which learning objectives this activity addresses."
        }
      },
      "required": ["type", "description", "duration_min"],
      "additionalProperties": false
    },
    "SlideBullet": {
      "type": "object",
      "properties": {
        "slide_number": {
          "type": "integer",
          "minimum": 1,
          "description": "Index of the slide."
        },
        "bullets": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1,
          "description": "Bullet points shown on this slide."
        }
      },
      "required": ["slide_number", "bullets"],
      "additionalProperties": false
    },
    "AssessmentItem": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Quiz", "Assignment", "Project", "Poll"],
          "description": "Assessment format."
        },
        "description": {
          "type": "string",
          "description": "Details of the assessment."
        },
        "max_score": {
          "type": "number",
          "minimum": 0,
          "description": "Maximum obtainable score for this item."
        }
      },
      "required": ["type", "description"],
      "additionalProperties": false
    },
    "Citation": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the referenced source."
        },
        "title": {
          "type": "string",
          "description": "The title or name of the source."
        },
        "retrieved_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO-8601 timestamp when the source was fetched."
        },
        "licence": {
          "type": "string",
          "description": "License or usage terms of the source."
        }
      },
      "required": ["url", "title", "retrieved_at"],
      "additionalProperties": false
    }
  }
}
